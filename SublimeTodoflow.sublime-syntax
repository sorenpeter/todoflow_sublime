%YAML 1.2
---
name: todoflow/taskpaper
file_extensions: [taskpaper]
scope: text.taskpaper


contexts:
  main:
    # whole line tags
    - match: '^.*@search.*\n'
      scope: tag.search.taskpaper
    - match: '^.*@done.*\n'
      scope: done.taskpaper
    - match: '^.*@waiting.*\n'
      scope: tag.waiting.taskpaper
    # action/task
    - match: ^\s*-
      scope: action.taskpaper
      pop: true  
    # project
    - match: ^.*:$
      scope: project.taskpaper
      pop: true
    # highlighted tags
    - match: '@working'
      scope: tag.working.taskpaper
      push: tag_param
    - match: '@due'
      scope: tag.due.taskpaper
      push: tag_param
    - match: '@next'
      scope: tag.next.taskpaper
      push: tag_param
    # generic tag
    - match: '@[^\s(]*'
      scope: tag.taskpaper
      push: tag_param
    # note
    - match: ^.*
      scope: note.taskpaper

  tag_param:
    - match: \s
      pop: true
    - match: \(
      push: tag_param_content
      scope: tag_param.taskpaper

  tag_param_content:
    - match: $
      scope: invalid.illegal
      pop: true
    - match: (\\\)|[^)])
      scope: tag_param.taskpaper
    - match: \)
      pop: true
      scope: tag_param.taskpaper
